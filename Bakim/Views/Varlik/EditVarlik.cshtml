@using Bakim.ViewModels;

@model EditVarlikViewModel;


<div class="container">
    <div class="card ">
        <div class="card-header card-header-stretch">
            <h3  class="card-title">@Model.varlik.VarlikName 'i Düzenliyorsunuz</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Varlik" asp-route-id="@Model.varlik.VarlikId" asp-action="EditVarlik" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 mb-10">
                            <label for="exampleFormControlInput1" class="form-label">Varlık Resmi</label>
                            <br>
                            <br>
                            <!--begin::Image input-->
                            <div class="image-input image-input-outline" data-kt-image-input="true"
                                style="background-image: url(/app/images/varliks)">
                                <!--begin::Image preview wrapper-->
                                <div class="image-input-wrapper w-125px h-125px"
                                    style="background-image: url(/app/images/varliks)"></div>
                                <!--end::Image preview wrapper-->

                                <!--begin::Edit button-->
                                <label
                                    class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                    data-kt-image-input-action="change" data-bs-toggle="tooltip" data-bs-dismiss="click"
                                    title="Change avatar">
                                    <i class="bi bi-pencil-fill fs-7"></i>

                                    <!--begin::Inputs-->
                                    <input type="file" name="file" accept=".png, .jpg, .jpeg"
                                        style="object-fit:cover;" />
                                    <input type="hidden" name="avatar_remove" />
                                    <!--end::Inputs-->
                                </label>
                                <!--end::Edit button-->

                                <!--begin::Cancel button-->
                                <span
                                    class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                    data-kt-image-input-action="cancel" data-bs-toggle="tooltip" data-bs-dismiss="click"
                                    title="Cancel avatar">
                                    <i class="bi bi-x fs-2"></i>
                                </span>
                                <!--end::Cancel button-->

                                <!--begin::Remove button-->
                                <span
                                    class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                    data-kt-image-input-action="remove" data-bs-toggle="tooltip" data-bs-dismiss="click"
                                    title="Remove avatar">
                                    <i class="bi bi-x fs-2"></i>
                                </span>
                                <!--end::Remove button-->
                            </div>
                            <!--end::Image input-->
                        </div>
                        <div class="col-md-6">
                            <label for="ProductionSectionId" class="form-label">Üretim Bölümü</label>
                            <select class="form-select form-select-sm form-select-solid mb-4" data-control="select2"
                                asp-for="@Model.varlik.ProductionSectionId"
                                data-placeholder="Üretim Bölümü Seçiniz">
                                <option></option>
                                @foreach (var item in Model.Uretimbolumu)
                                {
                                    if (item.ProductionSectionId == Model.varlik.ProductionSectionId)
                                    {
                                        <option selected value="@item.ProductionSectionId">@item.ProductionSectionName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ProductionSectionId">@item.ProductionSectionName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-10">
                            <label for="VarlikGroupId" class="form-label">Varlık Grubu</label>
                            <select id="genelgrup" onchange="kategorigetiren($(this).val())"
                                class="form-select form-select-sm form-select-solid mb-4" data-control="select2"
                                asp-for="@Model.varlik.VarlikGroupId" data-placeholder="Varlık Grubu Seçiniz"> 
                                <option></option>
                                @foreach (var item in Model.VarlikGruplari)
                                {
                                    if (item.VarlikGroupId == Model.varlik.VarlikGroupId)
                                    {
                                        <option selected value="@item.VarlikGroupId">@item.VarlikGroupName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.VarlikGroupId">@item.VarlikGroupName</option>

                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-10">
                            <label for="DetayGroupId" class="form-label">Varlık Kategorisi</label>
                            <select id="detaygrup" class="form-select form-select-sm form-select-solid mb-4"
                                data-control="select2" data-placeholder="Kategori Seçiniz"
                                asp-for="@Model.varlik.DetayGroupId" >
                                <option value=""></option>


                            </select>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-10">
                                <label for="VarlikCode" class="form-label">Varlık Kodu</label>
                                <input type="text" class="form-control form-control-sm form-control-solid mb-4"
                                    placeholder="Varlık Kodu Yazınız" asp-for="@Model.varlik.VarlikCode" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-10">
                                <label for="VarlikName" class="form-label">Varlık Adı</label>
                                <input type="text" class="form-control form-control-sm form-control-solid mb-4"
                                    placeholder="Varlık Adı Yazınız" asp-for="@Model.varlik.VarlikName" />
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center justify-content-center">
                           <div class="form-check form-switch">
                                <input asp-for="@Model.varlik.Pasif" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Pasif</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class=" btn btn-primary float-right mb-2">Kaydet</button>
                </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){

        $('#genelgrup').trigger("change");
    })
    function kategorigetiren(value) {
        console.log(value);
        $('#detaygrup').html("");
        $.ajax({
            url: "/Describing/KategoriGetiren",
            method: "GET",  // istek türü (GET veya POST)
            data: { getiren: value },  // gönderilecek veriler
            async: true,
            success: function (result) {
                let option = $('<option></option>');
                $('#detaygrup').append(option);
                console.log(result);
                for (let item of result) {
                    if (item.DetayGroupId == @Model.varlik.DetayGroupId) 
                    {
                        $('#detaygrup').append("<option selected value=" + item.DetayGroupId + ">" + item.DetayGroupName + "</option>");
                    }
                    else 
                    {
                        $('#detaygrup').append("<option value=" + item.DetayGroupId + ">" + item.DetayGroupName + "</option>");
                    }
                }
            }
        });
    }
</script>
