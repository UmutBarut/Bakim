@model UserSignInViewModel
@{
    Layout = "_authlayout";
}
                
<!--begin::Root-->
<div class="d-flex flex-column flex-root" id="kt_app_root">
    <!--begin::Page bg image-->
        <style>
            body {
                background-image: url('/media/auth/bgforlogin.jpeg');
            }
        </style>
    <!--end::Page bg image-->

        <!--begin::Authentication - Sign-in -->
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <!--begin::Aside-->
            <div class="d-flex flex-lg-row-fluid">
                <!--begin::Content-->
                <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100"> 
                    <!--begin::Image-->                
                    <img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="/media/auth/forlogin.png" alt=""/>    
                    <!--end::Image-->

                    <!--begin::Title-->
                    <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7"> 
                        Hızlı, Verimli ve Kolay
                    </h1>  
                    <!--end::Title-->

                    <!--begin::Text-->
                    <div class="text-gray-600 fs-base text-center fw-semibold">
                        In this kind of post, <a href="#" class="opacity-75-hover text-primary me-1">the blogger</a> 

                        introduces a person they’ve interviewed <br/> and provides some background information about 
                        
                        <a href="#" class="opacity-75-hover text-primary me-1">the interviewee</a> 
                        and their <br/> work following this is a transcript of the interview.  
                    </div>
                    <!--end::Text-->
                </div>
                <!--end::Content-->
            </div>
            <!--begin::Aside-->

            <!--begin::Body-->
            <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
                <!--begin::Wrapper-->
                <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
                    <!--begin::Content-->
                    <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
                        <!--begin::Wrapper-->
                        <div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
                            <!--begin::Form-->
                            <form class="form w-100" method="POST">
                                <!--begin::Heading-->
                                <div class="text-center mb-11">
                                    <!--begin::Title-->
                                    <h1 class="text-dark fw-bolder mb-3">
                                    Hoşgeldiniz
                                    </h1>
                                    <!--end::Title-->

                                    <!--begin::Subtitle-->
                                    <div class="text-gray-500 fw-semibold fs-6">
                                        Lütfen Giriş Yapın
                                    </div>
                                    <!--end::Subtitle--->
                                </div>
                                <!--begin::Heading-->

                                <!--begin::Input group--->
                                <div class="fv-row mb-8">
                                    <!--begin::Email-->
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                    <input type="text" placeholder="Kullanıcı Adı" asp-for="@Model.UserName" autocomplete="off" class="form-control bg-transparent"/> 
                                    <!--end::Email-->
                                </div>

                                <!--end::Input group--->
                                <div class="fv-row mb-3">    
                                    <!--begin::Password-->
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input type="password" placeholder="Şifre" asp-for="@Model.Password" autocomplete="off" class="form-control bg-transparent"/>
                                    <!--end::Password-->
                                </div>
                                <!--end::Input group--->

                                
                                <span class="text-danger">@ViewData["LoginResult"]</span>
                                <div class="row mb-8 mt-8">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="form 1Example3" 
                                                asp-for="@Model.RememberMe" />
                                            <label class="form-check-label" for="form1Example3"> Beni Hatırla </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-center"><a href="#" class="link-primary">Şifremi Unuttum</a></div> 
                                </div>
                                

                                <!--begin::Submit button-->
                                <div class="d-grid mb-10">
                                    <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
                                        <!--begin::Indicator label-->
                                        <span class="indicator-label">Giriş Yap</span>
                                        <!--end::Indicator label-->

                                        <!--begin::Indicator progress-->
                                        <span class="indicator-progress">
                                            Lütfen Bekleyin... 
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                        <!--end::Indicator progress-->        
                                    </button>
                                </div>
                                <!--end::Submit button-->
                            </form>
                            <!--end::Form-->     
                        </div>
                        <!--end::Wrapper-->

                        <!--begin::Footer-->                                 
                            <div class="row fw-semibold text-primary">
                                <div class="col-md-6 d-flex justify-content-end">
                                    <a href="https://hht.com.tr/about.html">Hakkımızda</a>
                                </div> 
                                <div class="d-flex justify-content-start col-md-6 text-center">
                                    <a href="https://hht.com.tr/contact.html">Bize Ulaşın</a>
                                </div>
                            </div>
                        <!--end::Footer-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Body-->
        </div>
        <!--end::Authentication - Sign-in-->
    </div>
<!--end::Root-->

<script>
    // Element to indecate
    var button = document.querySelector("#kt_sign_in_submit");

    // Handle button click event
    button.addEventListener("click", function() {
        // Activate indicator
        button.setAttribute("data-kt-indicator", "on");

        // Disable indicator after 3 seconds
        setTimeout(function() {
            button.removeAttribute("data-kt-indicator");
        }, 3000);
    });

</script>