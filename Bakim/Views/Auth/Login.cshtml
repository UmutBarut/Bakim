@model UserSignInViewModel
@{
    Layout = "_authlayout";
}

<!--begin::Root-->
<div class="d-flex flex-column flex-root" id="kt_app_root">
    <!--begin::Authentication - Sign-in -->
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!--begin::Aside-->
        <div class="d-flex flex-column flex-column-fluid flex-center w-lg-50 p-10">
            <!--begin::Wrapper-->
            <div class="d-flex justify-content-between flex-column-fluid flex-column w-100 mw-450px">
                <!--begin::Header-->
                <div class="d-flex flex-stack py-2">
                    <!--begin::Back link-->
                    <div class="me-2"></div>
                    <!--end::Back link-->
                </div>
                <!--end::Header-->
                <!--begin::Body-->
                <div class="py-20">
                    <!--begin::Form-->
                    <form class="form w-100" method="post">
                        <div class="card card-flush shadow-sm"> 
                            <!--begin::Body-->
                            <div class="card-body">
                                <!--begin::Heading-->
                                <div class="text-start mb-10">
                                    <!--begin::Title-->
                                    <h1 class="text-dark mb-3 fs-3x" data-kt-translate="sign-in-title">Hoşgeldiniz</h1>
                                    <!--end::Title-->
                                    <!--begin::Text-->
                                    <div class="text-gray-400 fw-semibold fs-6" data-kt-translate="general-desc">Giriş Yapın
                                    </div>
                                    <!--end::Link-->
                                </div>
                                <!--begin::Heading-->

                                <!--begin::Input group=-->
                                <div class="fv-row mb-8">
                                    <!--begin::Email-->
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                    <input type="text" placeholder="Kullanıcı Adı" class="form-control form-control-solid"
                                        asp-for="@Model.UserName" />
                                    <!--end::Email-->
                                </div>
                                <!--end::Input group=-->

                                <div class="fv-row mb-8">
                                    <!--begin::Password-->
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input type="password" placeholder="Şifre"
                                        class="form-control form-control-solid mb-6 bg-grey-900"
                                        asp-for="@Model.Password" />
                                    <!--end::Password-->
                                </div>

                                <span class="text-danger">@ViewData["LoginResult"]</span>
                                <div class="row">
                                    <div class="col-md-6 mb-6">
                                        <!-- Checkbox -->
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="form 1Example3" 
                                                asp-for="@Model.RememberMe" />
                                            <label class="form-check-label" for="form1Example3"> Beni Hatırla </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6"><a href="#!">Şifremi unuttum</a></div>
                                </div>

                                <!--end::Input group=-->
                                <!--begin::Actions-->
                                <div class="d-flex justify-content-end flex-stack mt-4">
                                    <!--begin::Submit-->
                                    <button type="submit" class="btn btn-primary flex-shrink-0">
                                        <!--begin::Indicator label-->
                                        <span class="indicator-label" data-kt-translate="sign-in-submit">Giriş Yap</span>
                                        <!--end::Indicator label-->
                                    </button>
                                    <!--end::Submit-->

                                </div>

                                
                                <!--end::Actions-->
                            </div>
                            <!--begin::Body-->
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Body-->
                <!--begin::Footer-->
                <div class="m-0">
                   
                    <div class="d-flex justify-content-center mt-10">
                        <h3 class="float-right text-muted me-4">Developed By -</h3>
                        <h2>HHT Bilişim</h2>
                    </div>    
                           
                </div>
                <!--end::Footer-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Aside-->
        <!--begin::Body-->
        <div class="d-none d-lg-flex flex-lg-row-fluid w-50 bgi-size-cover bgi-position-y-center bgi-position-x-start bgi-no-repeat"
            style="background-image: url(/media/auth/bg11.png)"></div>
        <!--begin::Body-->
    </div>
    <!--end::Authentication - Sign-in-->
</div>
<!--end::Root-->
