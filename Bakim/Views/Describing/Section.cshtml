
<div class="container">
   <div class="card card-flush shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Üretim Birimi Tanımlayın</h3>
        </div>
        <div class="card-body py-5">
                        
            @(Html.DevExtreme().DataGrid<Section>()
                .ID("dxContainer")
                .DataSource(d => d.Mvc()
                .Controller("Describing")
                .LoadAction("GetAllSection")
                .UpdateAction("UpdateSection")
                .DeleteAction("DeleteSection")
                .InsertAction("AddSection")
                .Key("SectionId")
                )
                .RemoteOperations(true)
                .Columns(columns => {

                columns.AddFor(m=>m.ProductionSectionId).Lookup(l=>l.DataSource(d=>d.Mvc().LoadAction("GetAllProductionSection").Key("ProductionSectionId")).DisplayExpr("ProductionSectionName").ValueExpr("ProductionSectionId")).AllowEditing(true).Alignment(HorizontalAlignment.Center).Caption("Üretim Bölümü");

                columns.AddFor(m => m.SectionName).AllowEditing(true).Alignment(HorizontalAlignment.Left).Caption("Kategori Adi").AllowFiltering(true);

                columns.AddFor(m => m.UploadDate).AllowEditing(true).Alignment(HorizontalAlignment.Left).Caption("Eklenme Tarihi").AllowFiltering(true).SortOrder(SortOrder.Desc);

                })
                .SearchPanel(s => s
                .Visible(true)
                .HighlightCaseSensitive(true)
                .Placeholder("Ara")
                .Width(200)
                )
                .FilterRow(f => f.Visible(true))
                .HeaderFilter(f => f.Visible(true))
                .ShowBorders(true)
                .GroupPanel(p => p.Visible(true).EmptyPanelText("Birimler"))
                .Height("100%")
                .Paging(paging => paging.PageSize(10))
                 .Editing(e =>
                e.AllowAdding(true)
                .AllowDeleting(true)
                .AllowUpdating(true)
                .UseIcons(true)
                .Mode(GridEditMode.Popup)
                .Popup(p=>
                p.Title("Birim Ekle & Düzenle")
                .ShowTitle(true)
                .Width(700)
                ))
                .Pager(p=>
                p.AllowedPageSizes(new JS("[5, 10, 20]"))
                .ShowNavigationButtons(true)
                .ShowPageSizeSelector(true)
                .Visible(true)
                .ShowNavigationButtons(true) 
                .ShowInfo(true)
                .DisplayMode(GridPagerDisplayMode.Full)
                )
                .Grouping(g => g.AutoExpandAll(false))
                )
        </div>
        <div class="card-footer">
           
        </div>
    </div>
</div>



